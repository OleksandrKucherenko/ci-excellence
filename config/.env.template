# Environment Variables Template
# Copy this file to .env.local and customize for your environment
# DO NOT commit .env files to version control (except .env.secrets.json which is encrypted)

# ============================================
# MISE Configuration
# ============================================

# Age key file for SOPS encryption
MISE_SOPS_AGE_KEY_FILE = ".secrets/mise-age.txt"
SOPS_AGE_KEY_FILE = "${MISE_SOPS_AGE_KEY_FILE}"

# ============================================
# Deployment Environment
# ============================================

# Active deployment profile (local, staging, production, canary, sandbox, performance)
DEPLOYMENT_PROFILE = "local"

# Cloud-agnostic region mapping (us-east, eu-west, etc.)
DEPLOYMENT_REGION = "us-east"

# Environment context for tooling (development, staging, production)
ENVIRONMENT_CONTEXT = "development"

# ============================================
# CI/CD Pipeline Configuration
# ============================================

# Job timeout override (minutes)
CI_JOB_TIMEOUT_MINUTES = "30"

# Pipeline script timeout (minutes)
PIPELINE_SCRIPT_TIMEOUT = "25"

# Global testability mode (PASS, FAIL, SKIP, TIMEOUT, DRY_RUN, EXECUTE)
CI_TEST_MODE = "EXECUTE"

# ============================================
# External Service Configuration
# ============================================

# GitHub API URL (for API calls)
# GITHUB_API_URL = "https://api.github.com"

# Webhook endpoints for pipeline notifications
# WEBHOOK_ENDPOINT = "https://hooks.example.com/ci"
# WEBHOOK_BASIC_AUTH = "username:password"

# ============================================
# Feature Flags (for local development)
# ============================================

# Enable debug logging in CI scripts
# ENABLE_DEBUG_LOGGING = "true"

# Enable performance monitoring
# ENABLE_PERFORMANCE_MONITORING = "false"

# ============================================
# Security Configuration
# ============================================

# Allow manual pushing of protected environment tags (emergency override)
ALLOW_PROTECTED_TAG_PUSH = "false"

# Enable GPG signing for commits
# GPG_SIGNING_ENABLED = "true"

# ============================================
# Notification Configuration
# ============================================

# Apprise notification URLs (space-separated)
# Examples:
#   Slack: slack://token_a/token_b/token_c
#   Teams: msteams://webhook_url
#   Discord: discord://webhook_id/webhook_token
#   Email: mailto://user@example.com
# See: https://github.com/caronc/apprise/wiki
# APPRISE_URLS = "slack://token1 msteams://webhook2"

# ============================================
# Runtime Configuration
# ============================================

# Node.js version
NODE_VERSION = "lts/*"

# TypeScript runtime
# BUN_VERSION = "latest"

# ============================================
# Example Application Configuration
# ============================================

# Database URL (example)
# DATABASE_URL = "postgresql://user:pass@localhost:5432/dbname"

# Redis URL (example)
# REDIS_URL = "redis://localhost:6379"

# Application configuration
# PORT = "3000"
# HOST = "localhost"
# LOG_LEVEL = "info"

# ============================================
# Cloud Provider Configuration (Examples)
# ============================================

# AWS
# AWS_REGION = "us-east-1"
# AWS_ACCESS_KEY_ID = "your-access-key"
# AWS_SECRET_ACCESS_KEY = "your-secret-key"

# Azure
# AZURE_LOCATION = "eastus"
# AZURE_CLIENT_ID = "your-client-id"
# AZURE_CLIENT_SECRET = "your-client-secret"

# Google Cloud
# GCP_REGION = "us-east1"
# GOOGLE_APPLICATION_CREDENTIALS = "path/to/service-account.json"

# ============================================
# Monitoring and Observability (Examples)
# ============================================

# Sentry
# SENTRY_DSN = "https://key@sentry.io/project"

# Datadog
# DATADOG_API_KEY = "your-api-key"
# DATADOG_APP_KEY = "your-app-key"

# Build configuration
# BUILD_NUMBER = "local"
# BUILD_DATE = "2025-01-01T00:00:00Z"
