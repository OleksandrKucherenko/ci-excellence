# CI/CD Environment Variables Template
# Copy this file to .env and fill in the values
# DO NOT commit .env file to version control

# ============================================
# GitHub Variables (Set in Repository Settings > Secrets and Variables > Actions)
# ============================================

# Pre-Release Pipeline Flags
ENABLE_COMPILE=true
ENABLE_LINT=true
ENABLE_UNIT_TESTS=true
ENABLE_INTEGRATION_TESTS=false
ENABLE_E2E_TESTS=false
ENABLE_BUNDLE=true
ENABLE_SECURITY_SCAN=false

# Release Pipeline Flags
ENABLE_NPM_PUBLISH=false
ENABLE_GITHUB_RELEASE=true
ENABLE_DOCKER_PUBLISH=false
ENABLE_DOCUMENTATION=false

# Post-Release Pipeline Flags
ENABLE_ROLLBACK=false
ENABLE_DEPLOYMENT_VERIFICATION=false
ENABLE_STABILITY_TAGGING=false

# Maintenance Pipeline Flags
ENABLE_CLEANUP=false
ENABLE_FILE_SYNC=false
ENABLE_DEPRECATION=false
ENABLE_SECURITY_AUDIT=false
ENABLE_DEPENDENCY_UPDATE=false

# ============================================
# Secrets (Set in Repository Settings > Secrets and Variables > Actions > Secrets)
# ============================================

# NPM Publishing (if ENABLE_NPM_PUBLISH=true)
# NPM_TOKEN=your_npm_token_here

# Docker Publishing (if ENABLE_DOCKER_PUBLISH=true)
# DOCKER_USERNAME=your_docker_username
# DOCKER_PASSWORD=your_docker_password

# GitHub Token (automatically provided by GitHub Actions)
# GITHUB_TOKEN=automatically_provided

# ============================================
# Optional Configuration
# ============================================

# Node.js version
NODE_VERSION=lts/*

# Python version
PYTHON_VERSION=3.11

# Go version
GO_VERSION=1.21

# Docker image name
DOCKER_IMAGE_NAME=your-org/your-app

# Documentation hosting
DOCS_HOSTING=github-pages
