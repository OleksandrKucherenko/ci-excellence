# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Shell scripts must always use LF
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# CI/CD and config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.md text eol=lf

# Source code
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.html text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Makefiles (must use tabs, not CRLF)
Makefile text eol=lf
*.mk text eol=lf

# Explicitly mark binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
